<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="TitleFontGray" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/custom_text_gray</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="TitleFontBlack" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="TitleFontBlackLarge" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="TitleFontGreen" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/custom_green</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="TitleFontWhite" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="SubTitleFontGray" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/text_size_subhead</item>
        <item name="android:textColor">@color/custom_text_gray</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="SubTitleFontBlack" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/text_size_subhead</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="TabsFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TabsFontBig" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
